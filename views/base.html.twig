<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sport Event{% endblock %}</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Fichier CSS personnalisé -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .event-card {
            transition: transform 0.2s;
        }
        .event-card:hover {
            transform: translateY(-5px);
        }
        .comment-item, .list-group-item {
            transition: all 0.2s;
        }
        .comment-item:hover, .list-group-item:hover {
            transform: translateX(5px);
            background-color: #f0f2f5 !important;
        }
        .btn {
            transition: all 0.3s;
        }
        .btn:hover {
            transform: translateY(-2px);
        }
        .nav-link {
            transition: all 0.2s;
        }
        .nav-link:hover {
            transform: translateY(-1px);
        }
        .admin-btn {
            background-color: #dc3545 !important;
            color: white !important;
            font-weight: bold !important;
            border: none !important;
            padding: 8px 16px !important;
            box-shadow: 0 2px 4px rgba(220, 53, 69, 0.3) !important;
        }
        .admin-btn:hover {
            background-color: #c82333 !important;
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.4) !important;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="/presentation">
                <i class="fas fa-running me-2"></i>Sport Event
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Accueil toujours visible -->
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/presentation">
                            <i class="fas fa-home me-1"></i>Accueil
                        </a>
                    </li>

                    {% if session.user_id is defined %}
                        <!-- Créer un événement -->
                        <li class="nav-item">
                            <a class="nav-link" href="/event/create">
                                <i class="fas fa-calendar-plus me-1"></i>Créer un événement
                            </a>
                        </li>
                        <!-- Administration (visible uniquement pour les admins) -->
                        {% if session.user.role is defined and session.user.role == 'admin' %}
                            <li class="nav-item mx-2">
                                <a class="nav-link btn rounded-pill admin-btn" href="/admin">
                                    <i class="fas fa-shield-alt me-1"></i>Administration
                                </a>
                            </li>
                        {% endif %}
                        <!-- Profil -->
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                <i class="fas fa-user-circle me-1"></i>Profil
                            </a>
                        </li>
                        <!-- Déconnexion -->
                        <li class="nav-item ms-2">
                            <a class="nav-link text-danger" href="/deconnexion">
                                <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <!-- Inscription -->
                        <li class="nav-item">
                            <a class="nav-link" href="/inscription">
                                <i class="fas fa-user-plus me-1"></i>Inscription
                            </a>
                        </li>
                        <!-- Connexion -->
                        <li class="nav-item ms-2">
                            <a class="nav-link btn btn-primary text-white px-3 rounded-pill" href="/connexion">
                                <i class="fas fa-sign-in-alt me-1"></i>Connexion
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main class="container mt-4">
        {% block content %}{% endblock %}
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript personnalisé -->
    {% block javascript %}{% endblock %}
</body>
</html>
